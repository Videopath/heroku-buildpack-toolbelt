#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install heroku toolbelt"
BUILD_DIR=$1
VENDOR_DIR="vendor"
DOWNLOAD_URL="http://assets.heroku.com.s3.amazonaws.com/heroku-client/heroku-client.tgz"

echo "DOWNLOAD_URL = " $DOWNLOAD_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
mkdir -p heroku-toolbelt
cd heroku-toolbelt
curl -L --silent $DOWNLOAD_URL | tar xz

echo "exporting PATH" | indent
PROFILE_PATH="$BUILD_DIR/.profile.d/heroku-toolbelt.sh"
mkdir -p $(dirname $PROFILE_PATH)
echo 'export PATH="$PATH:vendor/heroku-toolbelt/bin"' >> $PROFILE_PATH
